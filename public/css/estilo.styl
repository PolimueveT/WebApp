@import 'nib/vendor'
@import 'nib/gradients'

body 
	font-family: 'Roboto', sans-serif;

h1, h2
	font-weight 100

.hideEverything
  z-index: 999
  background: #e2e2e2
  position: absolute
  left: 0
  top: 86px
  bottom: 0
  right: 0
  padding-top: 50px

.progress
	margin-top 15px

.navbar 
.panel-heading
	background white
	padding-top 10px
	padding-bottom 10px

.btn.btn-success
	background linear-gradient(#5cb85c, #4cae4c)

input.ng-invalid.ng-dirty 
	border 1px solid #CC0000

input.ng-valid.ng-dirty 
	border 1px solid green

#map
	margin-top 10px
	margin-bottom 20px

.crear-trayecto
	margin-top 15px
	border 1px solid #CCC
	border-radius 10px