@import 'nib/vendor'
@import 'nib/gradients'

body 
	font-family: 'Roboto', sans-serif;
	background #f5f5f5

h1, h2
	font-weight 100

.hideEverything
  z-index: 999
  background: #e2e2e2
  position: absolute
  left: 0
  top: 86px
  bottom: 0
  right: 0
  padding-top: 50px

.progress
	margin-top 15px

.navbar
	box-shadow 0px 2px 10px #DDD
	background #6792ab
	padding-top 10px
	padding-bottom 10px
	border none

.panel-default
	.panel-heading
		background #6792ab
		padding-top 10px
		padding-bottom 10px
		color: #FFF
		text-shadow 1px 1px 1px #333


.navbar-default
	.navbar-brand
		color: #FFF
		text-shadow 1px 1px 1px #333
	.navbar-nav
		&>li
			&>a
				color: #FFF
				text-shadow 1px 1px 1px #333
			&>a:hover
				color: #DDD
				text-shadow 1px 1px 1px #333


.btn-primary
	background #6792ab
	border-color #6792ab

th
	letter-spacing -1px

.btn.btn-success
	background linear-gradient(#5cb85c, #4cae4c)

input.ng-invalid.ng-dirty 
	border 1px solid #CC0000

input.ng-valid.ng-dirty 
	border 1px solid green

#map
	margin-top 10px
	margin-bottom 20px

.crear-trayecto
	margin-top 15px
	border 1px solid #CCC
	border-radius 10px
	background #fff