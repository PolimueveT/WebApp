extend ../layouts/main
block content
    .container(ng-controller="UsuarioCtrl")
            .row
                .col-md-12(ng-repeat="a in alertas")
                    .alert(ng-class="{ 'alert-danger': !a.success, 'alert-success': a.success }")
                        {{ a.info }}
                    
            .row
                h1.col-md-12 ¡Bienvenido!
                .col-md-6
                    form(role="form", name="ingresar", method="post", action="/login")
                        .panel.panel-default
                            .panel-heading Entra a tu cuenta
                            .panel-body
                                .form-group
                                    label(for="nPlazas") Email
                                    input.form-control(ng-model="obj.loginUsername", required, id="username",name="username", type="text", placeHolder="Email")

                                .form-group
                                    label(for="horaSalida") Contraseña
                                    input.form-control(ng-model="obj.LoginPassword", required, id="password", name="password",type="password", placeHolder="Contraseña")

                                .form-group
                                   label.checkbox(for="labelrecuerdame") Recuerdame 
                                            input(ng-model="recuerdame", name="recuerdame",type="checkbox", id="recuerdame") 

                                .form-group
                                     input.col-md-6(class="btn btn btn-success", id="entrar", type="submit", value="Entrar a mi Cuenta")
                .col-md-6
                    form(role="form", name="crear-usuario", method="post")
                    .panel.panel-default
                        .panel-heading Registro de Usuario
                        .panel-body
                            .form-group
                                label(for="labelnombre") Tipo Usuario
                                select.form-control(ng-model="usertype")
                                    option(value="Alumno") Alumno
                                    option(value="Profesor") Profesor
                                    option(value="Personal") Personal

                            .form-group
                                label(for="labelnombre") Nombre
                                input.form-control(ng-model="nombre", required, id="nombre",name="nombre", type="text", placeHolder="Nombre")

                            .form-group
                                label(for="origen") Email
                                input.form-control(ng-model="email",required, name="email", type="email", placeHolder="Email")

                            .form-group
                                label(for="horaSalida") Contraseña
                                input.form-control(ng-model="password", required, name="password",type="password", placeHolder="Contraseña")

                            .form-group
                                label(for="horaSalida") Confirma contraseña
                                input.form-control(ng-model="password2", required, name="password2",type="password", placeHolder="Repite la contraseña")
                                {{ bypass | json}}
                            .form-group
                                 button.col-md-6(class="btn btn btn-primary", id="registrar", ng-click="RegistrarUsuario()") Registrarme
block script
    script(src="/js/UsuarioCtrl.js")